@page
@model Momeu_Olivia_Proiect.Pages.Furnizori.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editare</h1>

<h4>Furnizor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Furnizor.ID" />
            <div class="form-group">
                <label asp-for="Furnizor.NumeFurnizor" class="control-label">Nume</label>
                <input asp-for="Furnizor.NumeFurnizor" class="form-control" />
