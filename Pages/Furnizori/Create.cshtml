@page
@model Momeu_Olivia_Proiect.Pages.Furnizori.CreateModel

@{
    ViewData["Title"] = "Furnizor nou";
}

<h1>Adauga un nou furnizor</h1>

<h4>Furnizor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Furnizor.NumeFurnizor" class="control-label"></label>
                <input asp-for="Furnizor.NumeFurnizor" class="form-control" />
                <span asp-validation-for="Furnizor.NumeFurnizor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adauga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
