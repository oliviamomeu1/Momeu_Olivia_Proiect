@page
@model Momeu_Olivia_Proiect.Pages.CategoriiProduse.CreateModel

@{
    ViewData["Title"] = "Produs nou";
}

<h1>Adauga un nou produs</h1>

<h4>Categorie + Produs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategorieProdus.ProdusID" class="control-label">Produs by </label>
                <select asp-for="CategorieProdus.ProdusID" class ="form-control" asp-items="ViewBag.ProdusID"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategorieProdus.CategorieID" class="control-label">Nume categorie</label>
                <select asp-for="CategorieProdus.CategorieID" class ="form-control" asp-items="ViewBag.CategorieID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adauga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
