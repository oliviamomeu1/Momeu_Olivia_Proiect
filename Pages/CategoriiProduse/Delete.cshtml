@page
@model Momeu_Olivia_Proiect.Pages.CategoriiProduse.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Sterge</h1>

<h3>Sigur vrei sa stergi produsul?</h3>
<div>
    <h4>Produs by Categorie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategorieProdus.Produs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategorieProdus.Produs.ProdusProducator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategorieProdus.Categorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategorieProdus.Categorie.NumeCategorie)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CategorieProdus.ID" />
        <input type="submit" value="Sterge" class="btn btn-danger" /> |
        <a asp-page="./Index">Inapoi</a>
    </form>
</div>
