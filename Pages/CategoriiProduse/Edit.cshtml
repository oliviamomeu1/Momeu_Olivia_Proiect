@page
@model Momeu_Olivia_Proiect.Pages.CategoriiProduse.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CategorieProdus</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategorieProdus.ID" />
            <div class="form-group">
                <label asp-for="CategorieProdus.ProdusID" class="control-label">Produs</label>
                <select asp-for="CategorieProdus.ProdusID" class="form-control" asp-items="ViewBag.ProdusID"></select>
                <span asp-validation-for="CategorieProdus.ProdusID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategorieProdus.CategorieID" class="control-label">Categorie</label>
                <select asp-for="CategorieProdus.CategorieID" class="form-control" asp-items="ViewBag.CategorieID"></select>
                <span asp-validation-for="CategorieProdus.CategorieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salveaza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Inapoi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
