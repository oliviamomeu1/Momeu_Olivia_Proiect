@page
@model Momeu_Olivia_Proiect.Pages.Produse.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Sterge</h1>

<h3>Sigur vrei sa stergi produsul?</h3>
<div>
    <h4>Produs</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produs.Denumire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produs.Denumire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produs.Producator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produs.Producator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produs.Pret)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produs.Pret)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produs.DataDisponibilitatii)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produs.DataDisponibilitatii)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produs.Furnizor.NumeFurnizor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produs.Furnizor.NumeFurnizor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produs.CategoriiProduse)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var category in Model.Produs.CategoriiProduse)
                {
                    /*@category.Categorie.ID @:*/ @category.Categorie.NumeCategorie <br />
                }
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Produs.ID" />
        <input type="submit" value="Sterge" class="btn btn-danger" /> |
        <a asp-page="./Index">Inapoi</a>
    </form>
</div>
